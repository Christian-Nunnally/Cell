                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Fill" Value="{StaticResource SelectedBorderColor}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Rectangle.Style>
            </Rectangle>
            <Rectangle
                Height="3"
                DockPanel.Dock="Bottom"
                MouseDown="ResizerRectangleMouseDown"
                MouseMove="ResizerRectangleMouseMove"

<Window
    x:Class="Cell.View.Application.ApplicationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cell.View.Application"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Cell.ViewModel.Application"
    Width="{Binding ApplicationWindowWidth}"
    Height="{Binding ApplicationWindowWidth}"
    d:Height="500"
    d:Width="500"
    AllowsTransparency="True"
    ResizeMode="CanResize"
    SizeChanged="WindowSizeChanged"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="28" />
    </WindowChrome.WindowChrome>
    <DockPanel x:Name="RootWindow" PreviewKeyDown="WindowPreviewKeyDown">
        <DockPanel
            x:Name="TitleBar"
            Height="28"
            Background="{StaticResource CellBackground}"
            DockPanel.Dock="Top">
            <Button
                x:Name="CloseButton"
                Click="OnCloseButtonClicked"
                Content="x"
                DockPanel.Dock="Right"
                Style="{StaticResource TitleButtonStyle}" />
            <Button
                x:Name="MaxButton"
                Click="MaximizeButtonClick"
                Content="☐"
                DockPanel.Dock="Right"
                Style="{StaticResource TitleButtonStyle}" />
            <Button
                x:Name="MinButton"
                Click="MinimizeButtonClick"
                Content="-"
                DockPanel.Dock="Right"
                Style="{StaticResource TitleButtonStyle}" />
            <Grid>
                <ToggleButton x:Name="SettingTitleButtonPopupButton" Content="⚙️">
                    <ToggleButton.Style>
                        <Style BasedOn="{StaticResource TitleButtonToggleButtonStyle}" TargetType="{x:Type ToggleButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SettingTitleButtonPopup, Path=IsOpen}" Value="True">
                                    <Setter Property="IsHitTestVisible" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
                <Popup
                    x:Name="SettingTitleButtonPopup"
                    IsOpen="{Binding IsChecked, ElementName=SettingTitleButtonPopupButton, Mode=TwoWay}"
                    PlacementTarget="{Binding ElementName=SettingTitleButtonPopupButton}">
                    <Border BorderBrush="{StaticResource SelectedBorderColor}" BorderThickness="4,0,4,4">
                        <StackPanel>
                            <Button
                                Click="TogglePanLockButtonClick"
                                Content="🔒"
                                DockPanel.Dock="Left"
                                Style="{StaticResource TitleButtonStyle}"
                                ToolTip="Toggles the ability to pan and zoom. Useful for creating a nice UI." />
                            <ToggleButton
                                Content="⬜←"
                                DockPanel.Dock="Left"
                                IsChecked="{Binding ApplicationSettings.HighlightPopulateCellDependencies}"
                                Style="{StaticResource TitleButtonToggleButtonStyle}"
                                ToolTip="When enabled, selecting a single cell will cause cells used by the populate function to highlight." />
                            <ToggleButton
                                Content="⬜→"
                                DockPanel.Dock="Left"
                                IsChecked="{Binding ApplicationSettings.HighlightTriggerCellDependencies}"
                                Style="{StaticResource TitleButtonToggleButtonStyle}"
                                ToolTip="When enabled, selecting a single cell will cause cells used by the trigger function to highlight." />
                            <ToggleButton
                                Content="≡←"
                                DockPanel.Dock="Left"
                                IsChecked="{Binding ApplicationSettings.HighlightPopulateCollectionDependencies}"
                                Style="{StaticResource TitleButtonToggleButtonStyle}"
                                ToolTip="When enabled, selecting a single cell will cause collections used by the populate function to highlight." />
                            <ToggleButton
                                Content="≡→"
                                DockPanel.Dock="Left"
                                IsChecked="{Binding ApplicationSettings.HighlightTriggerCollectionDependencies}"
                                Style="{StaticResource TitleButtonToggleButtonStyle}"
                                ToolTip="When enabled, selecting a single cell will cause collections used by the trigger function to highlight." />
                            <Button
                                Click="ShowLogWindowButtonClick"
                                Content="/&gt;"
                                DockPanel.Dock="Left"
                                Style="{StaticResource TitleButtonStyle}" />
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
            <Button
                Click="ToggleEditPanelButtonClick"
                Content="🛠️"
                DockPanel.Dock="Left"
                Style="{StaticResource TitleButtonStyle}"
                ToolTip="Opens the cell format editor" />
            <Button
                Click="OpenSpecialEditPanelButtonClick"
                Content="⛏️"
                DockPanel.Dock="Left"
                Style="{StaticResource TitleButtonStyle}"
                ToolTip="Opens the cell settings editor" />
            <Button
                Click="OpenTextEditPanelButtonClick"
                Content="⌶"
                DockPanel.Dock="Left"
                Style="{StaticResource TitleButtonStyle}"
                ToolTip="Opens the cell content editor" />
            <Button
                Click="ShowFunctionManagerButtonClick"
                Content="f()"
                DockPanel.Dock="Left"
                Style="{StaticResource TitleButtonStyle}"
                ToolTip="Manage functions" />
            <Button
                Click="ShowCollectionManagerButtonClick"
                Content="≡"
                DockPanel.Dock="Left"
                Style="{StaticResource TitleButtonStyle}"
                ToolTip="Manage collections" />
            <local:TitleBarSheetNavigation
                DataContext="{Binding}"
                DockPanel.Dock="Bottom"
                WindowChrome.IsHitTestVisibleInChrome="True" />
        </DockPanel>
        <Grid>
            <ContentControl x:Name="_sheetViewContentControl" />
            <Canvas x:Name="_toolWindowCanvas" />
        </Grid>
    </DockPanel>
</Window>

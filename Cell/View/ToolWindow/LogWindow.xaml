<view:ResizableToolWindow
    x:Class="Cell.View.ToolWindow.LogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Cell.View.ToolWindow"
    xmlns:viewModel="clr-namespace:Cell.ViewModel.ToolWindow"
    d:DataContext="{d:DesignInstance Type=viewModel:LogWindowViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer x:Name="_logScrollViewer">
            <TextBox
                VerticalContentAlignment="Top"
                Background="Transparent"
                BorderThickness="0"
                FontFamily="{StaticResource ProgrammingFont}"
                Foreground="{StaticResource ForegroundColor}"
                IsManipulationEnabled="True"
                IsReadOnly="True"
                Text="{Binding LogBuffer, Mode=OneWay}"
                TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</view:ResizableToolWindow>
